{%
  set classes = [
    'section',
    'section-type--text',
    content.field_section_link ? 'section--has-link'
  ]
%}
<div{{ attributes.addClass(classes) }}>
  <section>
    {{ content.field_section_title }}
    {{ content.field_section_text }}
    {{ content.field_section_link }}
  </section>
</div>
